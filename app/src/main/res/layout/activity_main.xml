<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/anaKapsayici"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/anaKart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/anaLayout"
            android:padding="32dp">

            <TextView
                android:id="@+id/sozMetni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/baslangic_metni"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"
                android:padding="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/sozDegistirButon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#6200EE"
        android:text="@string/beni_motive_et"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp" />
    <Button
        android:id="@+id/paylasButon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bu_sozu_paylas"
        android:layout_marginTop="10dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</RelativeLayout>