<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/anaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/ustButonlar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/paylasButon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paylaş"
            android:layout_marginEnd="5dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

        <Button
            android:id="@+id/kopyalaButon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kopyala"
            android:layout_marginStart="5dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/anaKart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button android:id="@+id/btnGenel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Genel" android:layout_marginEnd="8dp"/>
                    <Button android:id="@+id/btnSpor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Spor" android:layout_marginEnd="8dp"/>
                    <Button android:id="@+id/btnBasari" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Başarı" android:layout_marginEnd="8dp"/>
                    <Button android:id="@+id/btnMotivasyon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Motivasyon" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/sozMetni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sözler yükleniyor..."
                android:textColor="#333333"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/sozDegistirButon"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#6200EE"
        android:text="Beni Motive Et!"
        android:textColor="#FFFFFF"
        app:cornerRadius="12dp" />

</RelativeLayout>